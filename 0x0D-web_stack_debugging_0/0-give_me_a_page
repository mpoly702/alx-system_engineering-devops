#Create a Dockerfile and retrieve the Apache image
FROM httpd:latest
#Copy the contents of the html file into Apache
COPY index.html /usr/local/apache2/htdocs/
#Build the image
docker build -t my-apache-image .
#Run the container
docker run -d -p 8080:80 --name apache-gboso my-a
pache-image
#Check the container is running
docker ps
#Access Apache
curl http://localhost:8080